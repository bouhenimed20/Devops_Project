pipeline {
    agent any

    stages {
        stage('Checkout GIT') {
            steps {
                echo 'Pulling the repository...'
                git(
                    branch: 'main',
                    url: 'https://github.com/RabebBenHajSlimane/responsive-website-restaurant.git'
                )
                
                // Afficher les informations sur le dernier commit
                echo 'Latest commit information:'
                sh 'git log -1'
            }
        }
        stage('Build with Maven') {
            steps {
                // Ex√©cuter Maven pour compiler le projet
                echo 'Starting Maven compile...'
                sh 'mvn clean compile'
                
                echo 'Maven compile completed'
            }
        }
    }
}
