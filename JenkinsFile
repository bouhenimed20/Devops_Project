pipeline {
    agent any

    stages {
        stage('Checkout GIT') {
            steps {
                echo 'Pulling the repository...'
                git(
                    branch: 'main',
                    url: 'https://github.com/benaissaislem/5ARCTIC6-G6-projet_devops.git'
                )
                
                
                echo 'Latest commit information:'
                sh 'git log -1'
            }
        }
        stage('Build with Maven') {
            steps {
                
                echo 'Starting Maven compile...'
                sh 'mvn clean compile'
                
                echo 'Maven compile completed'
            }
        }
    }
}
